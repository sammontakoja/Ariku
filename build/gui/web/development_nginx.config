# This configuration is read from manually installed nginx from developers machine.
# Both ariku html and rest services should have access to localhost.

server {
	listen [::]:80 default_server;
	listen localhost:80 default_server;

	root /home/sammontakoja/Ariku/build/gui/web;

	index index.html;

	server_name _;

	location / {
		try_files $uri $uri/ =404;
	}

    location /rest {
        proxy_pass http://localhost:5000;
    }

}